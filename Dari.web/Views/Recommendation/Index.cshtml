@model IEnumerable<Dari.Domain.Recommendation>

@{
    ViewBag.Title = "Index";
}
@section scripts{
<section class="pd-hero-section set-bg" data-setbg="/Content/img/properties/product-content-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="pd-hero-text">

                    <h2>Welcome To Dari</h2>



                </div>
            </div>
        </div>

    </div>
</section>
<br /><br />
@if (@ViewData["passenger"].ToString() == "0")
{
<div align="center">
    <input class="btn btn-primary btn-lg" type="button" title="Index" value="Refresh" onclick="location.href='@Url.Action("Index", "Recommendation")'" />
</div>
<!-- Top Properties Section Begin -->
<div class="top-properties-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="properties-title">
                    <div class="section-title">
                        <span>Top Recommendation For You</span>
                        <h2>Top Recommendation</h2>
                    </div>
                  
                    <a href="~/Vente/Index" class="top-property-all">View All Property</a>


                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="top-properties-carousel owl-carousel">
           @foreach (var item in Model)
           {

             <div class="single-top-properties">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="stp-pic">
                            @{ string path = "../Content/upload/" + @item.Image; }
                            <img src="@Url.Content(path)" width="100" height="100 " />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="stp-text">
                            <div class="s-text">@Html.DisplayFor(modelItem => item.Type)  <i class="fa ti-face-smile"></i></div>
                            <br />
                            <h3>Your Request Title :  @Html.DisplayFor(modelItem => item.Title)</h3>
                            <br />
                            <div class="room-price">
                                <span>Your Budget:</span>
                                <h4>@Html.DisplayFor(modelItem => item.Budget)        <i class="fa fa-money"></i></h4>
                            </div>
                            <p>@Html.DisplayFor(modelItem => item.DescriptionR)</p>
                           
                            <h3>Property Name :  @Html.DisplayFor(modelItem => item.Name)</h3>
                            <div class="properties-location"><i class="icon_pin"></i> @Html.DisplayFor(modelItem => item.Adress)</div>
                            <div class="room-price">
                                <span>Property Price (10%):</span>
                                <h4>@Html.DisplayFor(modelItem => item.Price)      <i class="fa fa-money"></i></h4>
                            </div>
                            <p>@Html.DisplayFor(modelItem => item.DescriptionR)</p>
                  
                        </div>
                    </div>
                </div>
            </div>

}
        </div>
    </div>
</div>

                                }

                                else
                                {
                                    <p> Creaaaate Accouuuuuuuuuuuuunt</p>
                                }
}