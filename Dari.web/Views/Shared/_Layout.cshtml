                        updateEvent(data);
                    } else {
                        //client buyer
                        saveEvent(data);
                        alert('succeeed');
                    }

                })



            //le bouton btnsave et pour le vendeur seller owner
                $('#btnSaveseller').click(function () {
                    //verification des champs
                    if ($('#txtSubject').val().trim() == "") {
