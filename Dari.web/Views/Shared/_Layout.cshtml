            //fonction pour l'update
            function updateEvent(data) {
                $.ajax({
                    url: "/RendezVous/UpdateEvent/",
                    dataType: "json",
                    type: 'POST',
                    data: data,
                    success: function (data) {
                        if (data.status) {
                            //Refresh the calender

                            $('#calendar').fullCalendar('refetchEvents');
                            //utilise le jquery de fullcaledar
                            //pour raffichir
                            $('#updateevent').modal('hide');
                        }
                    },
                    error: function () {
                        alert('Failed');
                    }
                })

            }


            //fonction save pour l'ajout pour le buyer le client
            function saveEvent(data) {
                {
                    $.ajax({
                        url: "/RendezVous/AddEvent/",
                        dataType: "json",
                        type: 'POST',
                        data: data,
                        success: function (data) {
                            if (data.status) {
                                //Refresh the calender
                                //utilise le jquery de fullcaledar
                                //pour raffichir
                                $('#calendar').fullCalendar('refetchEvents');
                                $('#updateevent').modal('hide');
                               
                            }
                        },
                        error: function () {
                            alert('Failed');
                        }
                    })


                }

            }


            //fonction save pour l'ajout pour le seller le owner
            function saveEventseller(data) {
                {
                    $.ajax({
                        url: "/RendezVous/AddEventSeller/",
                        dataType: "json",
                        type: 'POST',
                        data: data,
                        success: function (data) {
                            if (data.status) {
                                //Refresh the calender
                                //utilise le jquery de fullcaledar
                                //pour raffichir
                                $('#calendar').fullCalendar('refetchEvents');
                                $('#updateevent').modal('hide');

                            }
                        },
                        error: function () {
                            alert('Failed');
                        }
                    })


                }

            }

        });

