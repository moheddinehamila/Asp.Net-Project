                        return;
                    }
                    var startDate = $('#txtStart').val();
                    var endDate = $('#txtEnd').val();
                    if (startDate > endDate) {
                        alert('Invalid end date');
                        return;
                    }

                    //var data
                    //Prendre les Valeurs depuis le dialogue
                    var data = {
